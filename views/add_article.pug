            label Title:
            input.form-control(name='title', type ='text')
          #form-group
            label Author:
            input.form-control(name='author', type ='text')        
          #form-group
            label Body:
            input.form-control(name='body', type ='text') 
            input.btnbtn-primary(type='submit', value='Submit')       

    
